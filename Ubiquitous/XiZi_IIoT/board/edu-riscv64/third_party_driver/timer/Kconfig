if BSP_USING_HWTIMER
    config HWTIMER_BUS_NAME_1
    string "hwtimer bus name"
    default "timer0"

    menuconfig ENABLE_TIM1
    bool "enable TIM1"
    default y

    if ENABLE_TIM1
        config HWTIMER_1_DEVICE_NAME_1
        string "TIM1 dev name"
        default "timer0_dev0"

        config HWTIMER_DRIVER_NAME_1
        string "TIM1 drv name"
        default "timer0_drv"
    endif
endif
